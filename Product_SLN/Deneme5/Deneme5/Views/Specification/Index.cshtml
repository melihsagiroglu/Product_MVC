@model IEnumerable<Deneme5.Models.Specification>

@{
    ViewBag.Title = "Specifications";
}

<h2>Specifications</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            SpecName
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SpecName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SpecificationID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SpecificationID }) |
